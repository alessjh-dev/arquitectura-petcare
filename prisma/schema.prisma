// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id          String    @id @default(cuid())
  name        String    @unique
  photo       Bytes?    // Almacenará la imagen como Bytes (BYTEA en PostgreSQL)
  birthDate   DateTime? // <-- NUEVO: Fecha de nacimiento
  weight      Float?    // <-- NUEVO: Peso en kg o lbs
  breed       String?   // <-- NUEVO: Raza de la mascota
  recordedAt  DateTime  // Última vez que se registró CUALQUIER dato de la mascota (por /api/activity)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  activityEvents ActivityEvent[]
}

model ActivityEvent {
  id           String    @id @default(cuid())
  petId        String
  pet          Pet       @relation(fields: [petId], references: [id])
  timestamp    DateTime  @default(now())
  activityType String
}

model Notification {
  id        String   @id @default(cuid())
  type      String
  message   String
  timestamp DateTime @default(now())
  isRead    Boolean  @default(false)
}

model PushSubscription {
  id             Int       @id @default(autoincrement())
  endpoint       String    @unique
  keys           Json
  expirationTime DateTime?
  createdAt      DateTime  @default(now())
}