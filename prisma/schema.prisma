// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id          String    @id @default(cuid())
  name        String    @unique
  photo       Bytes?    // <-- NUEVO CAMPO: Almacenará la imagen como Bytes (BYTEA en PostgreSQL)
  recordedAt  DateTime  // Última vez que se registró CUALQUIER dato de la mascota (por /api/activity)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  activityEvents ActivityEvent[] // Relación: una mascota tiene muchos eventos de actividad
}

model ActivityEvent {
  id           String    @id @default(cuid())
  petId        String    // ID de la mascota a la que pertenece el evento
  pet          Pet       @relation(fields: [petId], references: [id]) // Relación con la mascota
  timestamp    DateTime  @default(now()) // Momento en que ocurrió la actividad
  activityType String    // Por ejemplo: 'movement' (ideal para un PIR).
}

model Notification {
  id        String   @id @default(cuid())
  type      String
  message   String
  timestamp DateTime @default(now())
  isRead    Boolean  @default(false)
}

model PushSubscription {
  id             Int       @id @default(autoincrement())
  endpoint       String    @unique
  keys           Json
  expirationTime DateTime?
  createdAt      DateTime  @default(now())
}